{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "impliedStrict": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "globals": {
    "QUnit": false,
    "supabase": false,
    "Typewriter": false
  },
  "rules": {
    "eqeqeq": ["error", "always"],
    "no-console": "warn",
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1,
        "ignoreComments": true
      }
    ],
    "quotes": [
      "error", 
      "single",
      { 
        "avoidEscape": true,
        "allowTemplateLiterals": true 
      }
    ],
    "no-multi-spaces": [
      "error",
      {
        "ignoreEOLComments": true
      }
    ],
    "new-cap": "error",
    "no-redeclare": [
      "error",
      {
        "builtinGlobals": true
      }
    ],
    "semi": ["error", "always"],
    "space-in-parens": ["error"],
    "space-infix-ops": "error",
    "object-curly-spacing": ["error", "always"],
    "comma-spacing": "error",
    "keyword-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "array-bracket-spacing": "error"
  }
}
